<Alloy>
  <Window id="storyWindow">
    <View id="wrapper">
      <View id="storyInfoView">
        <View id="bookBackgroundView">
          <ImageView id="bookCover">
        </View>
        <View id="bookDetails">
          <Label id="bookTitle" />
          <Label id="bookAuthor" />
          <Label id="shortDesc" />
        </View>
      </View>
      <View id="searchView" class="searchView">
        <SearchBar id="searchButton" class="search"/>
        <Button id="sortButton" class="sort" />
      </View>
      <View id="advView" />
      <TableView id="bookShellTable">
      </TableView>
    </View>
  </Window>
</Alloy>